<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="toolbar" parent="Widget.MaterialComponents.Toolbar">
        <item name="titleTextColor">@color/black</item>
        <item name="backgroundColor">@color/white</item>
        <item name="drawableTint">@color/black</item>
        <item name="drawableTintMode">@color/black</item>
    </style>
    <style name="plainCard">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginStart">20dp</item>
        <item name="android:layout_marginEnd">20dp</item>
        <item name="android:background">@drawable/card</item>
        <item name="android:elevation">3dp</item>
        <item name="android:padding">10dp</item>
    </style>
    <style name="gradientCardYellow" parent="plainCard">
        <item name="android:background">@drawable/card_gradient_yellow</item>
    </style>

    <style name="header">
        <item name="android:textColor">#1a1a1a</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">28dp</item>
    </style>
    <style name="header2">
        <item name="android:textColor">#1a1a1a</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="header3">
        <item name="android:textColor">#1a1a1a</item>
        <item name="fontFamily">sans-serif-black</item>
        <item name="android:textSize">18dp</item>
    </style>
    <style name="body">
        <item name="android:textColor">#1a1a1a</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14dp</item>
    </style>
    <style name="body_light">
        <item name="android:textColor">@color/dark_grey</item>
        <item name="fontFamily">sans-serif</item>
        <item name="android:textSize">14dp</item>
    </style>
</resources>